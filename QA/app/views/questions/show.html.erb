<div class="row">
  <div class="col-md-12">
    <h2><%= @questions.title %></h2>
    <div>
      Content:<%= @questions.content %>
    </div>
    <dib>
      Name:<%= @questions.name %>
    </dib>

    <h3>アンサーを送信する</h3>

    <div>
      <h3>Answer</h3>
      <table class="table table-striped">
        <% if @questions.answers.any? %>
          <thead class="thead-light">
          <tr>
            <td>Answer</td>
            <td>Name</td>
            <td>Menu</td>
          </tr>
          </thead>
          <tbody>
          <% @questions.answers.each do |answer| %>
          <tr>
            <td>
              <%= answer.content %>
            </td>
            <td>
              <%= answer.name %>
            </td>

            <td>
                [<%= link_to '編集する',edit_question_answer_path(answer) %>]
            </td>

          </tr>
          <%end %>
          </tbody>
        <%else %>
          <p>回答がありません</p>
        <%end %>
      </table>
    </div>

      <%=render 'answer' %>

      <div>
      <%= link_to 'ホームへ戻る',root_path %>
    </div>
  </div>

</div>